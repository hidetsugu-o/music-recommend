<div id="column">
  <h2 class="text-center py-5 text-light" style="font-size: 50px;"><%= @user.name %>さんのページ</h2>
</div>

<h1 class="text-white pb-3"><%= @user.name %>さんの投稿からピックアップ</h3>
<div class="d-flex overflow-auto">
  <% @user_posts.sample(3).each do |post| %>
    <%= render partial: 'posts/content', locals: { post: post } %>
  <% end %>
</div>

<h1 class="text-white py-3"><%= @user.name %>さんがイイねした投稿一覧</h3>
<div class="d-flex overflow-auto">
  <% @user_liked_posts.each do |post| %>
    <%= render partial: 'liked-content', locals: { post: post } %>
  <% end %>
</div>

<h1 class="text-white py-3"><%= @user.name %>さんの投稿一覧（新しい順）</h3>
<div class="d-flex overflow-auto">
  <% @user_posts.reverse_each do |post| %>
    <%= render partial: 'posts/content', locals: { post: post } %>
  <% end %>
</div>